<Window x:Class="PreparationProjet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreparationProjet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnStart" HorizontalAlignment="Right" Content="Lancement" Grid.Column="1" Width="300" Height="20" Click="Button_Click" />
        <Label x:Name="lblInfo" Content="" Grid.Column="0" />

        <StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
